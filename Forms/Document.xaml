<Window x:Class="School.Forms.Document"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:School.Forms"
        mc:Ignorable="d"
        Title="EducationHub" Height="600" Width="1000" MinHeight="600" MinWidth="1000" WindowStartupLocation="CenterScreen" Icon="/logo.png" >
    <Grid Background="#c4d8e1">
        <Grid.RowDefinitions>
            <RowDefinition Height="40*" />
            <RowDefinition Height="477*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Новости" Foreground="#0288d1" VerticalAlignment="Center" FontFamily="Century Gothic" FontSize="24" FontWeight="Bold" Margin="40,0" Grid.Row="0"/>
        <RichTextBox x:Name="docBox" Margin="10 0" Grid.Row="1"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button Content="Сохранить" Click="Save_Click" />
            <Button Content="Загрузить"  Click="Load_Click" />
            <Button Content="Главная" Click="Home_Click"/>
        </StackPanel>
    </Grid>
</Window>
